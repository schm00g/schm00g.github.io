---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import { SEO } from "astro-seo";

export interface LayoutProps {
  title: string;
}

const { title = "Shane McGrath | Web developer" } = Astro.props as LayoutProps;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth" data-testid="html">
  <head>
    <SEO title="smcgrath.dev" description="Personal portfolio" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="/favicon.ico" />

    <title>{title}</title>
  </head>
  <body
    class="mx-auto max-w-screen-xl bg-white px-5 font-sans text-white dark:bg-black xs:text-[16px] md:text-[18px]"
  >
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
      html {
        overflow-x: hidden;
      }
    </style>
    <script src="../scripts/entry.ts"></script>
  </body>
</html>
